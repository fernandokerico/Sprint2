function add(array){

    for (let i=0; i<array.length; i++){
        if (typeof array[i] !== 'number'){
            return'Valor invÃ¡lido'
        }
    }
        let soma=0
    for (let i=0; i<array.length; i+=1){
        soma = soma + array[i]
    }
    return soma
}

console.log(add([1,2,3,4,'txt']))
console.log(add([1,2,3,4,5]))
